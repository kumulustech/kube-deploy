{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "mongo0",
        "namespace": "default",
	"labels": {
            "type": "mongo"
        }
    },
    "spec": {
        "volumes": [
            {
                "name": "volume-1",
                "flexVolume": {
                    "driver": "datawise.io/volume",
		    "fsType": "ext4",
                    "options": {
                        "name": "mongo-vol0",
                        "qosClass": "best-effort",
                        "type": "Persistent"
                    }
                }
            }
        ],
        "vnics": [
            {
                "qosClass": "best-effort",
                "networkID": "blue"
            }
        ],
        "containers": [
            {
                "name": "mongo0",
                "image": "mongo",
		"args": [
                    "--wiredTigerCacheSizeGB",
                    "1"
                ],
                "resources": {
                    "limits": {
                        "cpu": "2000m",
                        "memory": "10Gi"
                    },
                    "requests": {
                        "cpu": "2000m",
                        "memory": "10Gi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "volume-1",
                        "mountPath": "/data/db"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ],
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst"
    }
}
