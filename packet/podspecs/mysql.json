{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "mysql0",
        "namespace": "default",
	"labels": {
            "type": "mysql"
        }
    },
    "spec": {
        "containers": [
            {
                "env": [
                    {
                        "name": "MYSQL_ALLOW_EMPTY_PASSWORD",
                        "value": "yes"
                    }
                ],
                "args": [
                     "--datadir=/var/lib/mysql/mysql"
                ],
                "image": "mysql",
                "name": "mysql0",
                "resources": {
                    "limits": {
                        "cpu": "3200m",
                        "memory": "10Gi"
                    },
		    "requests": {
			"cpu": "3200m",
			"memory": "10Gi"
		    }
                },
                "volumeMounts": [
                    {
                        "mountPath": "/var/lib/mysql",
                        "name": "data"
                    }
                ]
            }
	    ],
        "volumes": [
            {
                "flexVolume": {
                    "driver": "datawise.io/volume",
		    "fsType": "ext4",
                    "options": {
                        "name": "mysql-vol0",
                        "qosClass": "best-effort",
                        "type": "Persistent"
                    }
                },
                "name": "data"
            }
        ],
        "vnics": [
            {
		"networkID": "blue",
                "qosClass": "best-effort"
            }
        ]
    }
}
