{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "mongo0",
        "namespace": "default",
        "selfLink": "/api/v1/namespaces/default/pods/mongo0-best-effort",
	      "labels": {
            "datawise.io/app": "mongo0"
	}
    },
    "spec": {
        "volumes": [
            {
                "name": "volume-1",
                "flexVolume": {
                    "driver": "datawise.io/volume",
		                "fsType": "ext4",
                    "options": {
                        "name": "mongo-vol0",
                        "qosClass": "best-effort",
                        "type": "Persistent"
                    }
                }
            }
        ],
        "vnics": [
            {
                "qosClass": "best-effort",
                "networkID": "blue"
            }
        ],
        "containers": [
            {
                "name": "mongo0",
                "image": "mongo",
	            	"args": [
                    "--wiredTigerCacheSizeGB",
                    "5",
		    "--replSet",
		    "rs0-best-effort"
                ],
                "resources": {
                    "limits": {
                        "cpu": "2500m",
                        "memory": "10Gi"
                    },
                    "requests": {
                        "cpu": "2500m",
                        "memory": "10Gi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "volume-1",
                        "mountPath": "/data/db"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ],
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst"
    }
}
